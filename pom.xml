<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.jboss.test</groupId>
    <artifactId>clusterbench</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>clusterbench</name>
    
    <scm>
        <developerConnection>scm:git:git://github.com/rhusar/clusterbench.git</developerConnection>
    </scm>
    
    <modules>
        <module>clusterbench-common</module>
    </modules>
      
    <properties>
        <linkXRef>false</linkXRef>
    </properties>
    
    <profiles>
        <profile>                    
            <id>ee6</id>            
            <activation>
                <activeByDefault>true</activeByDefault>            
            </activation>
            <modules>
                <module>clusterbench-ee6-ear</module>
                <module>clusterbench-ee6-ear-passivating</module>
                <module>clusterbench-ee6-web</module>
                <module>clusterbench-ee6-web-granular</module>
                <module>clusterbench-ee6-ejb</module>
            </modules> 
        </profile>   
        <profile>
            <id>ee5</id>
            <modules>
                <module>clusterbench-ee5-ear</module>
                <module>clusterbench-ee5-web</module>
                <module>clusterbench-ee5-ejb</module>
            </modules>
        </profile>
    </profiles>
    
    <build>
        <pluginManagement>
            <plugins>
                <!-- Checkstyle -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-checkstyle-plugin</artifactId>
                    <!-- <version>${version.checkstyle.plugin}</version> -->
                    <configuration>
                        <configLocation>jboss-as-checkstyle/checkstyle.xml</configLocation>
                        <consoleOutput>true</consoleOutput>
                        <failsOnError>true</failsOnError>
                        <useFile/>
                    </configuration>
                    <dependencies>
                        <dependency>
                            <groupId>org.jboss.as</groupId>
                            <artifactId>jboss-as-build-config</artifactId>
                            <version>7.1.0.Final-SNAPSHOT</version>
                            <!-- <version>${project.version}</version> -->
                        </dependency>
                    </dependencies>
                    <executions>
                        <execution>
                            <id>check-style</id>
                            <phase>compile</phase>
                            <goals>
                                <goal>checkstyle</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin> 
            </plugins>            
        </pluginManagement> 
    </build>

    <distributionManagement>
        <repository>
            <id>nexus-releases</id>
            <name>Nexus Release Repository</name>
            <url>http://dev27:8081/nexus/content/repositories/releases</url>
        </repository>
        <snapshotRepository>
            <id>nexus-snapshots</id>
            <name>Nexus Snapshot Repository</name>
            <url>http://dev27:8081/nexus/content/repositories/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

</project>
